<p id="notice"><%= notice %></p>
<h1 class="text-center fs-1">Articles</h1>
<div class="conatiner d-flex justify-content-center">
  <%= form_with url: article_search_path, method: :post, authenticity_token: false, data: { controller: "search", search_target: "form", turbo_frame: "articles" } do |form| %>
    <%= form.text_field :query,
      placeholder: "Search by title",
      autocomplete: "off",
      data: { action: "input->search#search" },
      class: "form-control mt-3 pe-5" %>
  <% end %>
</div>
<%= turbo_frame_tag "articles" do %>
  <% articles.each do |article| %>
    <div class="article ps-2">
      <h3 class="fs-5"><%= article.title %></h3>
      <p><%= article.body %></p>
    </div>
  <% end %>
<% end %>